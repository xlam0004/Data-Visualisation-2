{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "",
    "data": {"url": "https://raw.githubusercontent.com/xlam0004/Data-Visualisation-2/main/data/uk_universities_boxplot.csv"},
    "width": 400, "height": 320, 

    "config":{"background": "#fff5eb"},
    "encoding": {
      "y": {
        "field": "Region", 
        "type": "nominal", 
        "title": null,
        "axis": {"orient":"right"}
      }
    },

    "layer": [
      
      {
        "mark": {"type": "rule"},
        "encoding": {
          "x": {"field": "lower", "type": "quantitative","scale": {"zero": false}, "title": null},
          "x2": {"field": "upper"},
          "tooltip": [
            {"field": "Region", "type": "nominal", "title": "State"},
            {"field": "lower", "type": "quantitative", "title": "Minimum"},
            {"field": "upper", "type": "quantitative", "title": "Maximum"}
          ]
        }
      },
      

      {
        "mark": {"type": "bar", "stroke": "black", "strokeOpacity": 0.5, "size": 14},
        "encoding": {
          "x": {"field": "first_quartile", "type": "quantitative", "scale": {"zero": false}},
          "x2": {"field": "third_quartile"},
          "color": {"condition":{"test":"datum.Region == 'London'", "value": "#f16913"}, "value": "grey"},
          "tooltip": [
            {"field": "Region", "type": "nominal", "title": "State"},
            {"field": "first_quartile", "type": "quantitative", "title": "Quartile 1"},
            {"field": "third_quartile", "type": "quantitative", "title": "Quartile 3"}
          ]
        }
      },

      {
        "mark": {"type": "tick", "color": "black", "size": 14},
        "encoding": {
          "x": {"field": "median", "type": "quantitative", "scale": {"zero": false}},
          "tooltip": [
            {"field": "Region", "type": "nominal", "title": "State"},
            {"field": "median", "type": "quantitative", "title": "Median"}]
        }
      },
      
      {
        "mark": {"type": "point", "color": "#bdbdbd"},
        "transform": [{"filter":"datum.outliers > 0"}],
        "encoding": {
          "x": {"field": "outliers", "type": "quantitative", "scale": {"zero": false}},
          "color": {"condition":{"test":"datum.Region == 'London'", "value": "#f16913"}, "value": "lightgrey"},
          "tooltip": [
            {"field": "Region", "type": "nominal", "title": "State"},
            {"field": "outliers", "type": "quantitative", "title": "Outlier"}]
        }
      }
    ]
  }