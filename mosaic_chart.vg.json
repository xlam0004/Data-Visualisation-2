{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data": {
      "url": "https://raw.githubusercontent.com/xlam0004/Data-Visualisation-2/main/data/uk_universities_mosaicchart.csv"
    },
    
    "transform": [
      {
        "aggregate": [
          {
            "op": "count",
            "as": "count_*"
          }
        ],
        "groupby": [
          "Region",
          "Gender"
        ]
      },
      {
        "stack": "count_*",
        "groupby": [],
        "as": [
          "stack_count_Origin1",
          "stack_count_Origin2"
        ],
        "offset": "normalize",
        "sort": [
          {
            "field": "Region",
            "order": "ascending"
          }
        ]
      },
      {
        "window": [
          {
            "op": "min",
            "field": "stack_count_Origin1",
            "as": "x"
          },
          {
            "op": "max",
            "field": "stack_count_Origin2",
            "as": "x2"
          },
          {
            "op": "dense_rank",
            "as": "rank_Cylinders"
          },
          {
            "op": "distinct",
            "field": "Gender",
            "as": "distinct_Cylinders"
          }
        ],
        "groupby": [
          "Region"
        ],
        "frame": [
          null,
          null
        ],
        "sort": [
          {
            "field": "Gender",
            "order": "ascending"
          }
        ]
      },
      {
        "window": [
          {
            "op": "dense_rank",
            "as": "rank_Origin"
          }
        ],
        "frame": [
          null,
          null
        ],
        "sort": [
          {
            "field": "Region",
            "order": "ascending"
          }
        ]
      },
      {
        "stack": "count_*",
        "groupby": [
          "Region"
        ],
        "as": [
          "y",
          "y2"
        ],
        "offset": "normalize",
        "sort": [
          {
            "field": "Gender",
            "order": "ascending"
          }
        ]
      },
      {
        "calculate": "datum.y + (datum.rank_Cylinders - 1) * datum.distinct_Cylinders * 0.01 / 3",
        "as": "ny"
      },
      {
        "calculate": "datum.y2 + (datum.rank_Cylinders - 1) * datum.distinct_Cylinders * 0.01 / 3",
        "as": "ny2"
      },
      {
        "calculate": "datum.x + (datum.rank_Origin - 1) * 0.01",
        "as": "nx"
      },
      {
        "calculate": "datum.x2 + (datum.rank_Origin - 1) * 0.01",
        "as": "nx2"
      },
      {
        "calculate": "(datum.nx+datum.nx2)/2",
        "as": "xc"
      },
      {
        "calculate": "(datum.ny+datum.ny2)/2",
        "as": "yc"
      }
    ],
    "vconcat": [
      {
        "mark": {
          "type": "text",
          "baseline": "middle",
          "align": "center"
        },
        "encoding": {
          "x": {
            "aggregate": "min",
            "field": "xc",
            "title": "Region",
            "axis": {
              "orient": "top"
            }
          },
          "color": {
            "field": "Region",
            "legend": null
          },
          "text": {"field": "Region"}
        }
      },
      {
        "layer": [
          {
            "mark": {
              "type": "rect"
            },
            "encoding": {
              "x": {
                "field": "nx",
                "type": "quantitative",
                "axis": null
              },
              "x2": {"field": "nx2"},
              "y": {
                "field": "ny",
                "type": "quantitative"
              },
              "y2": {"field": "ny2"},
              "color": {
                "field": "Region",
                "type": "nominal",
                "legend": null
              },
              "opacity": {
                "field": "Gender",
                "type": "quantitative",
                "legend": null
              },
              "tooltip": [
                {
                  "field": "Region",
                  "type": "nominal"
                },
                {
                  "field": "Gender",
                  "type": "quantitative"
                }
              ]
            }
          },
          {
            "mark": {
              "type": "text",
              "baseline": "middle"
            },
            "encoding": {
              "x": {
                "field": "xc",
                "type": "quantitative",
                "axis": null
              },
              "y": {
                "field": "yc",
                "type": "quantitative",
                "axis": {
                  "title": "Gender"
                }
              },
              "text": {
                "field": "Gender",
                "type": "nominal"
              }
            }
          }
        ]
      }
    ],
    "resolve": {
      "scale": {
        "x": "shared"
      }
    },
    "config": {
      "view": {
        "stroke": ""
      },
      "concat": {"spacing": 10},
      "axis": {
        "domain": false,
        "ticks": false,
        "labels": false,
        "grid": false
      }
    }
  }
  